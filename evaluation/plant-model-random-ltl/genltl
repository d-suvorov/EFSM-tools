#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

FSM=
NLTL=
LTLPRIORITIES=

while getopts ':a:n:u:' opt ; do
    case "$opt" in
        a) FSM="$OPTARG" ;;
        n) NLTL="$OPTARG" ;;
        u) LTLPRIORITIES="$OPTARG" ;;
        [?]) echo >&2 "Usage: $0 -a (EFSM file) -n (number of EFSM states) -u (LTL priorities in the randltl format)"
             exit 1 ;;
    esac
done


seed=$(date +%N)
LD_LIBRARY_PATH=/usr/local/lib/ randltl -n $NLTL --tree-size=$TREE_SIZE --seed $seed -p -s $($SCRIPT_DIR/getprop $FSM) --ltl-priorities="xor=0, implies=0, equiv=0, false=0, true=0" | sed -r 's/\[\]/G/g; s/<>/F/g; s/V/R/g'
